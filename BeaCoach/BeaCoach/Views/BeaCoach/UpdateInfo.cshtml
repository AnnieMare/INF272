    <center>
        <h1 style="color:lightpink; font-family: 'Sofia'">Update Personal Info</h1>
    </center>
    <div>
        <table style="width:50%;" align="center">
            <tr>
                <td>Title:</td>
                <td style="text-align:right; color:black">
                    <select id="Select1">
                        <option>Mr.</option>
                        <option>Ms.</option>
                        <option>Mrs.</option>
                        <option>Dr.</option>
                        <option>Mx.</option>
                        <option>Prof.</option>
                    </select>

                </td>
            </tr>
            <tr>
                <td>Name:</td>
                <td style="text-align:right;"><input id="Surname" type="text" name="name" required /></td>
                <td>Surname:</td>
                <td style="text-align:right;"><input id="surname" type="text" name="surname" required /></td>
            </tr>
            <tr>
                <td>Nickname:</td>
                <td style="text-align:right;"><input id="nickNAme" type="text" name="nickName" required /></td>
                <td>Relationship status:</td>
                <td style="text-align:right; color:black">
                    <select id="Select1">
                        <option>Single</option>
                        <option>Relationship</option>
                        <option>Married</option>

                    </select>
                </td>
            </tr>
            <tr>
                <td>Address:</td>
                <td style="text-align:right;"><input id="Text1" type="text" /><br /><p>Street Address</p></td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:right;"><input id="Text1" type="text" /><br /><p>Street Address 1</p></td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:right;"><input id="Text1" type="text" /><br /><p>City</p></td>
                <td style="text-align:right;"><input id="Text1" type="text" /><br /><p>State/Province</p></td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:right;"><input id="Text1" type="number" /><p>Postal/Zip Code</p></td>
                <td style="text-align:right;">
                    <input id="Text1" type="text" /><br /><p>Country</p>
                </td>
            </tr>
            <tr>
                <td>Email:</td>
                <td style="text-align:right;"><input id="email" type="email" name="email" required /></td>
            </tr>
            <tr>
                <td>Password:</td>
                <td style="text-align:right;"><input id="password" type="password" name="password" required /></td>
            </tr>
            <tr>
                <td>Confirm Password:</td>
                <td style="text-align:right;"><input id="confPass" type="password" name="confPassword" required /></td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:right;"></td>
                <td></td>
                <td style="text-align:right;">
                    <input id="btnUpdate" type="submit" value="Update" class="buttonLogin" />
                </td>
            </tr>
